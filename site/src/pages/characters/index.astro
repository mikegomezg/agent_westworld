---
import Layout from "../../layouts/Layout.astro";
import { loadAllCharacters } from "../../utils/yaml-loader.js";

const characters = loadAllCharacters();
---

<Layout title="All Characters">
    <h1>All Characters</h1>

    <div class="characters-grid">
        {
            characters.map((character) => (
                <div class="character-card">
                    <h3>
                        <a href={`/characters/${character.id}`}>{character.name}</a>
                    </h3>
                    <p class="character-role">{character.role}</p>
                    <p class="character-description">{character.description}</p>
                    {character.relationships && (
                        <div class="character-relationships">
                            <strong>Key Relationships:</strong>
                            <ul>
                                {character.relationships.slice(0, 3).map((rel) => (
                                    <li>
                                        {rel.type}: {rel.target}
                                    </li>
                                ))}
                            </ul>
                        </div>
                    )}
                </div>
            ))
        }
    </div>

    <style>
        .characters-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }

        .character-card {
            background: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            border-left: 4px solid #0066cc;
        }

        .character-card h3 {
            margin: 0 0 10px 0;
        }

        .character-card h3 a {
            color: #0066cc;
            text-decoration: none;
        }

        .character-card h3 a:hover {
            text-decoration: underline;
        }

        .character-role {
            color: #666;
            font-style: italic;
            margin: 5px 0;
            font-weight: 500;
        }

        .character-description {
            margin: 15px 0;
            line-height: 1.5;
        }

        .character-relationships {
            font-size: 0.9em;
            color: #555;
        }

        .character-relationships ul {
            margin: 5px 0;
            padding-left: 20px;
        }
    </style>
</Layout>
