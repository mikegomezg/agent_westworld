---
import Layout from "../../layouts/Layout.astro";
import { loadAllScenes } from "../../utils/yaml-loader.js";

const scenes = loadAllScenes();
---

<Layout title="All Scenes">
    <h1>All Scenes</h1>

    <div class="scenes-grid">
        {
            scenes.map((scene) => (
                <div class="scene-card">
                    <h3>
                        <a href={`/scenes/${scene.id}`}>{scene.title}</a>
                    </h3>
                    <p class="scene-meta">
                        Episode {scene.episode} | {scene.location}
                    </p>
                    <p class="scene-synopsis">{scene.synopsis}</p>
                    {scene.characters && (
                        <div class="scene-characters">
                            <strong>Characters:</strong> {scene.characters.join(", ")}
                        </div>
                    )}
                </div>
            ))
        }
    </div>

    <style>
        .scenes-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }

        .scene-card {
            background: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            border-left: 4px solid #0066cc;
        }

        .scene-card h3 {
            margin: 0 0 10px 0;
        }

        .scene-card h3 a {
            color: #0066cc;
            text-decoration: none;
        }

        .scene-card h3 a:hover {
            text-decoration: underline;
        }

        .scene-meta {
            color: #666;
            font-style: italic;
            margin: 5px 0;
        }

        .scene-synopsis {
            margin: 15px 0;
            line-height: 1.5;
        }

        .scene-characters {
            font-size: 0.9em;
            color: #555;
        }
    </style>
</Layout>
